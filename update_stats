#!/usr/bin/env ruby

require "bundler/inline"

gemfile do
  source "https://rubygems.org"

  gem 'sqlite3', require: true
  gem 'activerecord', require: 'active_record'
  gem "front_matter_parser", require: true
  gem "pry", require: true
end

ActiveRecord::Base.logger = Logger.new($stdout)
ActiveRecord::Base.establish_connection(
  :adapter => "sqlite3",
  :dbfile  => "ctf.db"
)

class Writeup
  def initialize(
    ctf: nil,
    competition: nil,
    categories: [],
    tools: [],
    url: nil,
    captured: nil,
    flag: nil,
    summary: nil
  )
    @ctf = cft
    @competition = competition
    @categories = categories
    @tools = tools
    @url = url
    @captured = captured
    @flag = flag
    @summary = summary
  end
end

def CTF
  def initialize(name:)
    @name
  end
end

dir = Dir["./writeups/**/*.md"]
binding.pry